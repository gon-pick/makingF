<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_board_rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시글 제목"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="17dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txt_board_rv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여기는 게시글 내용 게시글 내용"
        app:layout_constraintTop_toBottomOf="@id/txt_board_rv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="17dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_board_rv_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성자"
        app:layout_constraintTop_toBottomOf="@id/txt_board_rv_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="17dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_board_rv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08/18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/txt_board_rv_heart"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_board_rv_date"
        android:layout_marginRight="62dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txt_board_rv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_board_rv_date"
        app:layout_constraintStart_toEndOf="@id/txt_board_rv_heart"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:text="00"/>
    <ImageView
        android:id="@+id/txt_board_rv_message"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_board_rv_num"
        app:layout_constraintTop_toBottomOf="@id/txt_board_rv_date"
        android:layout_marginRight="27dp"

        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txt_board_rv_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_board_rv_date"
        app:layout_constraintStart_toEndOf="@id/txt_board_rv_message"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:text="00"/>


</androidx.constraintlayout.widget.ConstraintLayout>