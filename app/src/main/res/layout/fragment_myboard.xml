<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/write_btn_cert_back"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/btn_back"/>
         <TextView
             android:id="@+id/myboard"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="My board"
             android:textColor="#000000"
             android:textSize="20dp"
             android:layout_marginTop="20dp"
             android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="post"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:layout_marginRight="50dp"
            />

        <TextView
            android:id="@+id/account_tv_post_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:layout_marginRight="30dp"
            />


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginTop="20.5dp"
            android:layout_below="@+id/write_btn_cert_back"
            android:orientation="horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear1">
            <Button
                android:id="@+id/myboard_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="my post"
                android:background="@drawable/btn_bg"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/myboard_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Like post"
                android:background="@drawable/btn_bg"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/account_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>