<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_detail_title"
        android:text="MakingF"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"/>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="logout"
           android:id="@+id/logout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:id="@+id/division_detail_toolbar"
        android:layout_marginTop="21.5dp"
        android:orientation="horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:lineSpacingExtra="-4sp"
        android:text="메이킹에프 사용법"
        android:layout_marginTop="15.5dp"
        android:layout_marginLeft="25dp"
        />

    <ImageButton
        android:layout_width="360dp"
        android:layout_height="196dp"
        android:id="@+id/manual"
        android:background="@drawable/manual"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15.5dp"
        android:orientation="horizontal"
        android:background="#e0e0e0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천 정보"
        android:textColor="#000000"
        android:textSize="14sp"
        android:lineSpacingExtra="5sp"
        android:layout_marginTop="14.5dp"
        android:layout_marginLeft="25dp"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="210dp"
                android:layout_height="136dp"
                android:background="@drawable/add_1"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="136dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/add_2"/>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_marginTop="21.5dp"
        android:orientation="horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:lineSpacingExtra="5sp"
        android:text="실시간 인기 게시글"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />
   </LinearLayout>

</ScrollView>