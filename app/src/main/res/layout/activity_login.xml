<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="22sp"
        android:textColor="#000000"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/text_signin_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="12sp"
        android:textColor="#000000"
        android:lineSpacingExtra="5sp"
        android:layout_below="@id/text_login"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="288dp"
        />

    <EditText
        android:id="@+id/edit_signin_email"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_below="@id/text_signin_email"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_edittext"
        android:hint="Email" />

    <TextView
        android:id="@+id/text_siginin_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:lineSpacingExtra="5sp"
        android:text="비밀번호"
        android:layout_below="@id/edit_signin_email"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="41dp"
        />

    <EditText
        android:id="@+id/edit_siginin_password"
        android:inputType="textPassword"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_below="@id/text_siginin_password"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_edittext"
        android:hint="Password"
        android:password="true" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_below="@id/edit_siginin_password"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="41dp"
        android:background="@drawable/btn_login"
        android:text="로그인하기"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="6sp"
        android:gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_find_password"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="비밀번호 찾기"
            android:layout_marginLeft="98dp"
            android:textSize="12sp"
            android:textColor="#a2a8ee"
            android:lineSpacingExtra="18sp"
            android:background="#FFFFFF"
            />

        <Button
            android:id="@+id/btn_signin_signup"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="회원가입하기"
            android:textSize="12sp"
            android:textColor="#a2a8ee"
            android:lineSpacingExtra="18sp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/btn_find_password"
            android:background="#FFFFFF"
            />

    </RelativeLayout>

</RelativeLayout>