<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_mypage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        android:text="마이페이지"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/txt_mypage_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#e3e3e3"/>


    <ImageView
        android:id="@+id/img_mypage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/sample"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/txt_mypage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:text="곤곤"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_mypage"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_mypage"
        app:layout_constraintBottom_toBottomOf="@id/img_mypage"
        android:layout_marginRight="25dp"
        android:id="@+id/mypage_imgbutton"
        android:src="@drawable/mypagebutton"/>


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="20dp"
        android:background="#e3e3e3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_mypage" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="10dp"
        android:background="#e3e3e3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/txt_mypage_community_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="13dp"
        android:clickable="true"
        android:text="커뮤니티 이용규칙"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <View
        android:id="@+id/view6"
        app:layout_constraintTop_toBottomOf="@id/txt_mypage_community_rule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="#e3e3e3"/>
    <TextView
        android:id="@+id/txt_mypage_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view6"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="24dp"
        android:text="앱 버전"
        android:textSize="12sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txt_mypage_app_version_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view6"
        android:layout_marginTop="13dp"
        android:layout_marginRight="24dp"
        android:text="0.0.0(20201201)"
        android:textSize="12sp"
        android:textColor="#aaaaaa"/>

    <View
        android:id="@+id/view7"
        app:layout_constraintTop_toBottomOf="@id/txt_mypage_app_version"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="#e3e3e3"/>
    <TextView
        android:id="@+id/txt_mypage_notion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view7"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="24dp"
        android:text="공지사항"
        android:textSize="14sp"
        android:textColor="#000000"
        android:clickable="true"/>

    <View
        android:id="@+id/view8"
        app:layout_constraintTop_toBottomOf="@id/txt_mypage_notion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="#e3e3e3"/>
    <TextView
        android:id="@+id/txt_mypage_private_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view8"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="24dp"
        android:text="개인정보 처리방침"
        android:textSize="12sp"
        android:textColor="#000000"
        android:clickable="true"/>

    <View
        android:id="@+id/view9"
        app:layout_constraintTop_toBottomOf="@id/txt_mypage_private_information"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="#e3e3e3"/>
    <TextView
        android:id="@+id/txt_mypage_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view9"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="24dp"
        android:text="로그아웃"
        android:textSize="12sp"
        android:textColor="#000000"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/ai" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/global" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/computer" />

</androidx.constraintlayout.widget.ConstraintLayout>